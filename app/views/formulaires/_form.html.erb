
<div class="panel panel-primary">
    <div class="panel-heading">
        Créer un formulaire
    </div>
    
    
    <div class="panel-body">
        <div class= "col-md-8">
            <div class="form-group">
                <%= form_for (@formulaire) do |f| %>

                
                <div class="row">
                    <div class="form-group col-md-8">
                        <label>Nom du formulaire :</label>
                            <%= f.text_field :name, placeholder: "Nom du formulaire", class: "form-control" %>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-8">
                        <label>Description du formulaire :</label>
                            <%= f.text_area :description, placeholder: "Nom du formulaire", class: "form-control" %>
                    </div>
                </div>
                
                <br/>
                <hr/>
                <br/>
                
                <!-- PLACER ICI LES QUESTIONS  -->
                <!-- JS : Appuyer sur le bouton NEW création des champs. Render questions/_form -->
                
                <div class="row">
                    <div class="col-md-8 text-center">
                        <%= link_to '', new_question_path, class: "btn-sm btn-primary fa fa-plus" %>

                    </div>
                </div>
                

                <br/>
                <hr/>
                <br/>
                
                <%= f.fields_for :questions do |field| %>
                    <%= field.text_field :nom, placeholder: "Nom de la question", class: "form-control" %>   
                <% end %>
                <div class="actions">
                    <%= f.submit "Valider le formulaire", class:"btn btn-primary" %>
                </div>
                  
                <% end %>
            </div>    
        </div>
    
        <!-- Boite à outils latérale -->
        
        <div class="col-md-4">
            <div class="panel panel-info">
                <div class="panel-heading">
                        Boite à outils
                </div>
                    
                <div class="panel-body">
                    
                        items
                       
                </div>
            </div>    
        </div>


    </div>
</div>

