<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">

    <h2>Connexion</h2>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Adresse email" %>
      </div>
    
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Mot de passe" %>
      </div>
    
      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %> Se souvenir de moi
        </div>
      <% end -%>
    
    <div class="col-md-3"></div>
      <div class="actions col-md-1">
        <%= f.submit "Connexion", class: "btn btn-primary" %>
      </div>
      <div class="col-md-1"></div>
      
      <div class="col-md-4">
      <%= link_to "Mot de passe oubliÃ© ?", new_password_path('user'), :class => "login-link"  %>
        </div>
              

    <% end %>
  </div>
</div>
