<%= form_for (@question), html: {multipart: true} do |f| %>
  <!--
  <div class="field">
    <%= f.text_field :formulaire_id %>
  </div>
  -->
  <div class="row">
    <div class="form-group col-md-8">
        <label>Nom de la question :</label>
            <%= f.text_field :nom, placeholder: "Nom de la question", class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-8">
        <label>Type de question :</label>
            <%= f.select :typequestion,[["Choix multiples",1],["Choix simple",2],["Reponse courte",3]],prompt: "SÃ©lectionner le type de qu", class: "form-control" %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-4">
      <span class="btn btn-default btn-file">
        <i class="fa fa-cloud-upload fa-lg"></i> DL vos photos 
        <%= file_field_tag "images[]", type: :file, multiple: :true %>
      </span>
    </div>
  </div>
  
  <div id="photos"><%= render 'photos/list' %></div>


  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
